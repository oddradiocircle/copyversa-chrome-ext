{
  "name": "CopyVersa v2",
  "description": "Powerful Chrome extension for copying web content in multiple formats (Markdown, HTML, Plain Text) with visual feedback",
  "version": "2.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "img/logo-16.png",
    "32": "img/logo-32.png",
    "48": "img/logo-48.png",
    "128": "img/logo-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "img/logo-48.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.ts-loader-CzndjV5Y.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "src/contentScript/styles.css",
        "assets/index-D5giiajG.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "img/logo-16.png",
        "img/logo-32.png",
        "img/logo-48.png",
        "img/logo-128.png",
        "assets/chunk-DTl7Fbt_.js",
        "assets/chunk-COjCpS_a.js"
      ],
      "use_dynamic_url": false
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite"
  ],
  "commands": {
    "activate_copyversa": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Activate CopyVersa content selection"
    }
  }
}
